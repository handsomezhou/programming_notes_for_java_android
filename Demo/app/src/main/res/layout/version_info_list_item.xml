<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minHeight="@dimen/list_item_height"
    android:orientation="vertical"
    android:padding="@dimen/padding" >

    <TextView
        android:id="@+id/version_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:textColor="@color/gray"
        android:textSize="@dimen/prompt_normal_text_size" />

    <TextView
        android:id="@+id/upgrade_info_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:textColor="@color/gray"
        android:textSize="@dimen/prompt_small_text_size" />

    <TextView
        android:id="@+id/remark_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:textColor="@color/gray"
        android:textSize="@dimen/prompt_small3_text_size" />
</LinearLayout>